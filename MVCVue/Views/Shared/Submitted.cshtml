@using ServiceStack
@model MVCVue.Models.SubmittedBrandsAndModels

<div class="container-fluid pt-3 border rounded bg-info text-white">
    <div class="row">
        <main class="col">
            <div class="form-group row">
                <div class="col">Submitted on @DateTime.Now</div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">Selected Brand(s):</div>
                <div class="col-sm-10">@Model.Brands.ToCsv()</div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">Selected Model(s):</div>
                <div class="col-sm-10">@Model.Models.ToCsv()</div>
            </div>
        </main>
    </div>
</div>
